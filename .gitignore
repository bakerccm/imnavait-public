# ignore raw sequence data except placeholders
/data/raw/16S/*
/data/raw/ITS/*

# ignore taxonomic databases except placeholders and specific files
/databases/*
!/databases/download.sh
!/databases/readme.md
!/databases/md5sums.txt

# ignore software except placeholders
/software/*

# ignore output files
/out/16S/*
/out/ITS/*
/out/combined/*
!/out/combined/imnavait_normalized.rdata

# ignore snakemake files
/.snakemake

# ignore system files
.DS_Store

# retain .gitkeep files as placeholders in otherwise empty directories
!.gitkeep
